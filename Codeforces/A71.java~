import java.util.*;
public class A71{
    public static void main (String [] args){
        Scanner sc=new Scanner (System.in);
        int n=sc.nextInt();
        for (int i=1;i<=n;i++){
            String s=sc.nextLine();
            
            if (s.length <=10){
                System.out.println(s);
            } else{
                String st=s.split("");
                System.out.println(st[0]+(s.length-2)+st[s.length-1]);
            }
        }
    }
}
