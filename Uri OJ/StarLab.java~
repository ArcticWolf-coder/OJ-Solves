import java.util.*;public class StarLab
{
    public static void main(String[] args) {
Scanner sc=new Scanner( System.in);
int a=sc.nextInt();

for (int i=1;i<=a;i++){
    if(i==1 || i==a){
    for (int n=1; n<=(i-n);n++){
        System.out.print(" ");
    }
    for (int k=1; k<=i;k++){
        System.out.print("*");
    }
    }
    else { for (int j=1; j<=i;j++){
       
    for (int m=1; m<=j;m++){
        if(m==1 || m==j){
            System.out.print("*");
        } else {
            System.out.print(" ");
        }
    }
    }
    }
    
        
    

    

      

System.out.println();
}

    }
    }
